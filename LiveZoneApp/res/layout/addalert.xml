<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ZoneItemLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	
	<!--SCROLL VIEW REQUIRES A SINGLE CHILD ELLEMENT-->
	<LinearLayout android:scrollbars="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:orientation="vertical">

		<LinearLayout
		android:padding="6px"
		android:layout_marginLeft="10px"
		android:layout_marginRight="10px"
		android:layout_marginTop="5px"
		android:layout_marginBottom="5px"
		android:id="@+id/namePanel"
		android:background="@drawable/panelbackground" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation="vertical">
		
			<TextView android:text="Name (for example: Home, work ...)" android:textColor="#000000"
				android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
				
			<EditText android:id="@+id/addAlert_Name" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:text="Enter a Name for this alert"></EditText>
		</LinearLayout>


		<LinearLayout
		android:padding="6px"
		android:layout_marginLeft="10px"
		android:layout_marginRight="10px"
		android:layout_marginTop="5px"
		android:layout_marginBottom="5px"
		android:id="@+id/locationPanel"
		android:background="@drawable/panelbackground" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation="vertical">

			<TextView android:text="Location" android:textColor="#000000"
				android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
				
			<EditText android:id="@+id/Location" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:text="... acquiring location"></EditText>

			<TextView android:text="Radius in Meters" android:textColor="#000000"
				android:id="@+id/TextView01" android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
				
			<EditText android:text="@+id/EditText01" android:id="@+id/EditText01"
				android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>
		</LinearLayout>


		<ibsta.LiveZone.UI.Controls.ActionPanelList
			android:layout_marginLeft="10px"
			android:layout_marginRight="10px"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:id="@+id/zoneItemActionPanelList">
		</ibsta.LiveZone.UI.Controls.ActionPanelList>

		<Button android:id="@+id/addActionList" android:text="add action list" 
		android:layout_width="wrap_content" android:layout_height="wrap_content"/>

		<Button android:id="@+id/saveAlert" android:text="Save Alert" 
		android:layout_width="wrap_content" android:layout_height="wrap_content"/>

	</LinearLayout>

</ScrollView>










