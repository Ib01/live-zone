<TextView android:text="Latitude " android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
<EditText android:id="@+id/Latitude" android:layout_height="wrap_content" android:layout_width="fill_parent" 
android:text="... acquiring location" ></EditText>

<TextView android:text="Longtitude: "  android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
<EditText android:id="@+id/Longtitude" android:layout_height="wrap_content" android:layout_width="fill_parent" 
android:text="... acquiring location" ></EditText>


